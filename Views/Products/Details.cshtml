@model EC.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

    <hr />
    <h4 class="card-title" style="margin-top: 1em;">@Model.ProductName</h4>
    <hr />
    <div class="row">
        <div class="col-xs-6 col-md-3 col-sm-offset-0">
                <figure role="presentation">
                    <img src="@Url.Content(Model.ImagePath)" class="img-fluid card-img rounded">
                </figure>
        </div>
        <div class="col-lg-9">
            <div class="table-responsive">
                <table class="table table-dark table-hover" >
                    <tbody>
                        <tr>
                            <td class="h5">Product Description</td>
                            <td scope="row"> @Model.Description</td>
                        </tr>
                        <tr>
                            <td class="h5">Quantity</td>
                            <td scope="row">@Model.Description</td>
                        </tr>
                        <tr>
                            <td class="h5">Price</td>
                            <td>@Html.DisplayFor(model => model.Price)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>



<p>
   <div class="btn btn-primary white"> @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) </div>|
   <div class="btn btn-primary white"> @Html.ActionLink("Back to List", "Index")</div>
</p>
