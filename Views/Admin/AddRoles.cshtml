@model EC.Models.UserRoles

@{
    ViewBag.Title = "AddRoles";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    var Email = ViewBag.Email;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <hr />
    <h2 class="h2">Add Roles</h2>
    <hr />
    @Html.HiddenFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @value = Email } })
    <div class="form-group">
        <select name="Roles" class="form-control" data-role="select-dropdown" multiple required>
            @{
                foreach (string role in (List<string>)ViewBag.roles)
                {
                    <option value="@role">@role</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
}

