@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

@Styles.Render("~/Content/carousel")



<main role="main">
     <div id="myCarousel" class="carousel slide" data-ride="carousel">
         <ol class="carousel-indicators">
             <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
             <li data-target="#myCarousel" data-slide-to="1"></li>
             <li data-target="#myCarousel" data-slide-to="2"></li>
             <li data-target="#myCarousel" data-slide-to="3"></li>
         </ol>
         <div class="carousel-inner">
             <div class="carousel-item active">
                 <img src="~/Carousel/blackcat.jpg" class="img-thumbnail"/>
                 <div class="container">
                     <div class="carousel-caption text-left">
                     </div>
                 </div>
             </div>
             <div class="carousel-item">
                 <img src="~/Carousel/patrick-brinksma--VTJEOcYT8o-unsplash.jpg" class="img-thumbnail" />
                 <div class="container">
                     <div class="carousel-caption text-right">
                     </div>
                 </div>
             </div>
             <div class="carousel-item">
                    <img src="~/Carousel/black_and_white_rose.jpg" class="img-thumbnail" />
                 <div class="container">
                     <div class="carousel-caption text-right">
                     </div>
                 </div>
             </div>
            <div class="carousel-item">
                    <img src="~/Carousel/rafael-de-nadai-b0eg-PYGICQ-unsplash.jpg" class="img-thumbnail"/>
                 <div class="container">
                     <div class="carousel-caption text-right">
                     </div>
                 </div>
             </div>
         </div>
         <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
             <span class="carousel-control-prev-icon" aria-hidden="true"></span>
             <span class="sr-only">Previous</span>
         </a>
         <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
             <span class="carousel-control-next-icon" aria-hidden="true"></span>
             <span class="sr-only">Next</span>
         </a>
     </div>
  </main>







