
@model PagedList.IPagedList<EC.Models.UserView>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListUsers";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<hr />
<h4 class="h4">Users</h4>
<hr />
<table class="table table-dark table-hover table-responsive  table-responsive-sm table">

    @{
        int count = 0;
    }
    @foreach (var item in Model)
    {
        if (count == 0)
        {
            <tr>
                <th>

                    @Html.DisplayNameFor(model => item.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.UserName)
                </th>
            </tr>
        }
        count++;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if (item.Phone != null)
                {
                    Html.DisplayFor(modelItem => item.Phone);
                }
                else
                {
                    <p>None</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { Email = item.Email }) |
                @Html.ActionLink("Details", "UserDetails", new { Email = item.Email }) |
                @Html.ActionLink("Delete", "DeleteUser", new { Email = item.Email })|
                @Html.ActionLink("Change Password", "ChangePassword", new { Email = item.Email }, null)
            </td>
        </tr>
    }
</table>
<hr />
<div class="btn btn-primary white">
    @Html.ActionLink("Create New", "Create")
</div>




<div>
    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { sortOrder = ViewBag.Sort, page = page }), PagedListRenderOptions.PageNumbersOnly
        )
</div>
